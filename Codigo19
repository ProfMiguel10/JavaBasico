package exemplo;

import java.util.Scanner;

public class Principal {

	public static void main(String[] args) {
		Scanner in = new Scanner(System.in);
		int opcao;
		do {
			System.out.println("1 - Começar");
			System.out.println("2 - Sair");
			System.out.println("Opção: ");
			opcao = in.nextInt();
		} while (opcao != 2);
		in.close();
	}
}
